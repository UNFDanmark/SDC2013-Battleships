<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tutorial"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you hit one of the opponent&apos;s ships the tile will become red. If you don&apos;t hit anything the tile will turn light gray, to show there is nothing there. once you&apos;ve shot it&apos;s the other players turn. You keep taking turns to fire until either of you have lost all their ships. May the good gunner win."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play!" />

    <Button
        android:id="@+id/mainmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu" />

</LinearLayout>
